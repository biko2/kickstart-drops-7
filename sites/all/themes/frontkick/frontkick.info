name = Frontkick
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css


; For information on choosing the desired method, please read the Drupal
; Bootstrap sub-theme "how-to" documentation:
; https://drupal.org/node/1978010

; ;----------------------------------
; ; METHOD 1: Bootstrap Source Files
; ;----------------------------------
;
; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;
;
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/affix.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/alert.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/button.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/carousel.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/collapse.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/dropdown.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/modal.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/tooltip.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/popover.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/scrollspy.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/tab.js'
scripts[] = '/vendor/bootstrap-sass-official/assets/javascripts/bootstrap/transition.js'
;
; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


; Theme default settings
settings[bootstrap_tooltip_descriptions] = 0

